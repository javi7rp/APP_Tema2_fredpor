<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/fondo_realizar_llamada"
    tools:context=".LLamadaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LLAMAR"
        android:textSize="30dp"
        />

    <ImageButton
        android:id="@+id/botonRealizarLLamada"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/llamada_telefonica" />



    <Button
        android:id="@+id/volverMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="140dp"
        android:text="VOLVER AL MENU" />

</LinearLayout>