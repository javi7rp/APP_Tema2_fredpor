<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_blue"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".menu">

    <LinearLayout
        android:id="@+id/section1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/fondo_arriba"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/imagenPerfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/otro"
            android:background="@drawable/fondo_arriba"
            />

        <TextView
            android:id="@+id/textoBienvenida"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text=""
            android:gravity="center"
            android:layout_below="@+id/texto1"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ProgressBar
            android:id="@+id/ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_color"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"

        >

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            tools:ignore="MissingConstraints"
            android:visibility="invisible"
            >
            <TableRow>
                <ImageButton
                    android:id="@+id/botonLLamada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/llamada_telefonica"
                    android:background="@drawable/forma_boton"
                    android:text="boton para realizar una llamada"
                    />
                <ImageButton
                    android:id="@+id/botonDados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dado2cara6"
                    android:background="@drawable/forma_boton"
                    android:text="boton para jugar a los dados"/>
                <ImageButton
                    android:id="@+id/botonMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/maps"
                    android:background="@drawable/forma_boton"
                    android:text="boton para abrir google maps"/>

            </TableRow>

            <!-- TableRow 2 -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LLAMADA"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DADOS"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAPS"
                    android:gravity="center"/>
            </TableRow>
            <TableRow>
                <ImageButton
                    android:id="@+id/botonModdle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/moddle"
                    android:text="boton para entrar a moddle"
                    android:background="@drawable/forma_boton"/>
                <ImageButton
                    android:id="@+id/botonChistes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/risa"
                    android:background="@drawable/forma_boton"
                    android:text="boton para entrar a chistes"/>
                <ImageButton
                    android:id="@+id/botonAlarma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/alarma"
                    android:background="@drawable/forma_boton"
                    android:text="boton para poner una alarma"/>

            </TableRow>

            <!-- TableRow 2 -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MODDLE"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHISTES"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALARMA"
                    android:gravity="center"/>
            </TableRow>

        </TableLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/section3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">


        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            tools:ignore="MissingConstraints"
            android:background="@drawable/fondo_abajo"
            >
            <TableRow>

                <TextView
                    android:id="@+id/textoFooter"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:gravity="center|center"
                    android:text="THE MESSI STORE"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/imagenFooter"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/messi_store"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>








</LinearLayout>